@using FGMC.RMS.Web.RMSServiceReference;
@model FGMC.RMS.Web.Models.EncompassReportsModel
<link href="~/Content/styles.css" rel="stylesheet" />
<script src="~/Scripts/rms/encompass-report.js"></script>

@*Report Specific Scripts*@
<script src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
<link href="https://cdn.datatables.net/buttons/1.2.2/css/buttons.dataTables.min.css" rel="stylesheet"/>

<div class="row">
    <div class="col-sm-3 col-lg-2">
        <div class="form-group">
            <label for="txtusername">Enter User Name</label>
            @Html.DropDownListFor(m => m.SelectedEncompassUser, new SelectList(Model.EncompassUsers, "EncompassRMSUserID", "EncompassUserName"), "Select User", new { id = "ddlUser", @class = "form-control" })
        </div>
    </div>
    <div class="col-sm-3 col-lg-2">
        <label for="userid" class="search_lbl"></label>
        <div class="form-group">
            <button type="button" class="btn btn-success" id="btnSearch">Generate Report</button>
        </div>
    </div>
</div>
<div class="content">
    <h4 class="content-title">@Model.Title</h4>
    <table id="RequestSummary" class="table table-striped table-bordered" cellspacing="0">
        <thead>
            <tr>
                <th>UserName</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Persona Name</th>
                <th>Persona Activity</th>
                <th>Requested Date</th>
                <th>ME Reference#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ReportData)
            {
                <tr>
                    <td>@item.EncompassUserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.PersonaName</td>
                    <td>@(item.IsPersonaActive ? "Added" : "Removed")</td>
                    <td>@item.RequestDate.ToShortDateString()</td>
                    <td>@item.MERequestId</td>
                  </tr>
            }
        </tbody>
    </table>
    <span style="color:red">@Model.ErrorMessage</span>
</div>