<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Loan Logics QC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .copyRight {
            float: right;
            width: 470px;
            font-size: 15px;
            font-family: calibri;
            font-weight: normal;
            color: #333;
        }
    </style>
</head>
<body>
    <header class="container-fluid">
        <div class="col-lg-4 col-sm-6 logo">
            <a href="@Url.Action("SearchLoans", "SearchLoans")">
                <img src="@Url.Content("~/Images/logo.png")"/>
            </a>

        </div>


        <div class="col-lg-8 col-sm-6 ">
            <h2 class="text-right"> <b id="headerText">Loan Logics QC</b>
            </h2>
        </div>

        <div class="col-lg-8 col-sm-6 ">
            <ul class="home-nav text-right">

                @if (!string.IsNullOrEmpty(Convert.ToString(Session["FirstName"])))
                {
                    <li> <b>Welcome @Session["FirstName"] @Session["LastName"] </b> </li>

                }

                @if (Session["CurrentlyLoggedInUser"] != null)
                {
                    <li><a href="javascript:void(0)" id="logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                }

            </ul>

        </div>

    </header>
        <div class="body-content">
            @RenderBody()
            <hr />
            <footer class="wrap navbar-fixed-bottom">
                <p id="footerText">
                    Loan Logics QC V1.0 - FGMC
                    <span class="copyRight">
                        Copyright &copy; @DateTime.Now.Year.ToString() First Guaranty Mortgage Corporation (NMLS ID 2917)
                        1900 Gallows Road, Suite 800, Tysons Corner, VA 22182 - All Rights Reserved
                    </span>
                </p>
            </footer>
        </div>

        @*@Scripts.Render("~/bundles/jquery")*@
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
<script>
    $(document).ready(function () {
    $("#logout").click(function () {
        if (confirm('Are you sure you want to logout of the application?')) {
            $.ajax({
                url: '/Account/Logout',
                processData: false,
                contentType: false,
                type: 'POST',
                success: function (response) {
                    window.location.href = response.Url;
                },
                error: function (response) {
                }
            });
        }
    });
    });

</script>